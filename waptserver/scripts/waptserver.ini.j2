[uwsgi]
master = true
processes = 10
wsgi=waptserver.server:app
home=/opt/wapt
chdir=/opt/wapt
max-requests=1000
socket=/var/run/waptserver/wapt.sock
uid=wapt
gid=www-data
plugins=python
chmod-socket = 664
env = CONFIG_FILE=/opt/wapt/conf/waptserver.ini
logto = /var/log/uwsgi/waptserver.log
log-5xx = true
disable-logging = true

[options]
wapt_folder=/var/www/{{application_root}}/wapt

wapt_user=admin
wapt_password={{wapt_password}}
server_uuid = {{server_uuid}}
secret_key = {{secret_key}}

#client_tasks_timeout=3

use_kerberos = {{use_kerberos}}
allow_unauthenticated_registration = False

application_root={{application_root}}

db_user={{application_root}}
db_password={{application_root}}
db_name={{application_root}}
db_host=127.0.0.1

waptserver_port={{waptserver_port}}
